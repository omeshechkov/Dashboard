<UserControl x:Class="StandartObjectLibrary.Cooler"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Grid x:Name="layoutRoot">
    <Image Name="image" SnapsToDevicePixels="True" RenderTransformOrigin="0.5, 0.5">
      <Image.RenderTransform>
        <RotateTransform x:Name="rotateTransform" Angle="0" />
      </Image.RenderTransform>
    </Image>

    <Border>
        <TextBlock Name="valueTextBlock" FontSize="12" FontFamily="Verdana" Foreground="White"
               HorizontalAlignment="Center" VerticalAlignment="Center" />

        <Border.Clip>
          <EllipseGeometry x:Name="innerClipPathEllipse" />
        </Border.Clip>
      </Border>
    </Grid>
</UserControl>
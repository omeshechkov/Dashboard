<Page x:Class="DashboardEngine.ErrorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ErrorPage">

  <ScrollViewer VerticalScrollBarVisibility="Auto">
    <StackPanel>
      <TextBlock Foreground="White" FontSize="20">Error</TextBlock>

      <StackPanel Orientation="Horizontal">
        <TextBlock Foreground="White" FontSize="14">Section:</TextBlock>
        <TextBlock x:Name="SectionText" FontSize="14" Foreground="Red" Margin="10,0,0,0" />
      </StackPanel>

      <TextBlock Foreground="White" FontSize="14" Margin="0,5,0,0">Error Text:</TextBlock>
      <TextBlock x:Name="ErrorText" FontSize="14" Foreground="Red" TextWrapping="Wrap" />
    </StackPanel>
  </ScrollViewer>
</Page>

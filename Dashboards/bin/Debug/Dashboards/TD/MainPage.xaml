<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ext="clr-namespace:ExtendedObjectsLibrary;assembly=ExtendedObjectsLibrary"
      Title="Main Page">

  <Page.Resources>
    <XmlDataProvider x:Key="list">
      <x:XData>
        <Links xmlns="">
          <Link>
            <Name>Commutator Trunks</Name>
            <ScenarioPath>pack://siteoforigin:,,,/Scenarios/TD/CommutatorTrunks.xml</ScenarioPath>
          </Link>
          <Link>
            <Name>BTS</Name>
            <ScenarioPath>pack://siteoforigin:,,,/Scenarios/TD/BTS.xml</ScenarioPath>
          </Link>
        </Links>
      </x:XData>
    </XmlDataProvider>

  </Page.Resources>

  <Grid x:Name="TDLayoutRoot">
    <ext:DashboardList ItemsSource="{Binding Source={StaticResource list}, XPath=/Links/Link}" />
  </Grid>
</Page>
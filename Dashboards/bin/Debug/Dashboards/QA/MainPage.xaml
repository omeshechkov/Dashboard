<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ext="clr-namespace:ExtendedObjectsLibrary;assembly=ExtendedObjectsLibrary"
      Title="Main Page">

    <Page.Resources>
      <XmlDataProvider x:Key="list">
          <x:XData>
              <Links xmlns="">
                  <Link>
                      <Name>Subscriber Base Progress</Name>
                      <ScenarioPath>pack://siteoforigin:,,,/Scenarios/QA/SBP.xml</ScenarioPath>
                  </Link>
              </Links>
          </x:XData>
      </XmlDataProvider>
    </Page.Resources>

    <Grid>
      <ext:DashboardList ItemsSource="{Binding Source={StaticResource list}, XPath=/Links/Link}" />
    </Grid>
</Page>
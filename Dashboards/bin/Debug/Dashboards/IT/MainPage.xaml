<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ext="clr-namespace:ExtendedObjectsLibrary;assembly=ExtendedObjectsLibrary"
      Title="Main Page">

  <Page.Resources>
    <XmlDataProvider x:Key="list">
      <x:XData>
        <Links xmlns="">
          <Link>
            <Name>Billing</Name>
            <ScenarioPath>pack://siteoforigin:,,,/Scenarios/IT/Billing.xml</ScenarioPath>
          </Link>
          <Link>
            <Name>Mobi Pay</Name>
            <ScenarioPath>pack://siteoforigin:,,,/Scenarios/IT/MobiPay.xml</ScenarioPath>
          </Link>
        </Links>
      </x:XData>
    </XmlDataProvider>
  </Page.Resources>

  <Grid>
    <ext:DashboardList ItemsSource="{Binding Source={StaticResource list}, XPath=/Links/Link}" />
  </Grid>
</Page>
<UserControl x:Class="ExtendedObjectsLibrary.HistogramLegendElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="UserControl">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>

    <Border x:Name="colorRectangle" Grid.Column="0" Width="20" Height="11"
            VerticalAlignment="Center" HorizontalAlignment="Center"
            BorderBrush="#CFCFCF" CornerRadius="2"
            Margin="2,1" />

    <TextBlock x:Name="textBlock" Grid.Column="1" Margin="2,1"
               FontFamily="Tahoma" FontSize="12" Foreground="White"
               HorizontalAlignment="Left" VerticalAlignment="Center" />
  </Grid>
</UserControl>